{
  "manifest_version": 3,
  "name": "WebShield.AI",
  "version": "1.0",
  "description": "Browser extension to detect and highlight dark patterns in real-time.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "ml/classifier.js",
        "content/content.js"
      ],
      "css": [
        "content/style.css"
      ]
    }
  ]
}